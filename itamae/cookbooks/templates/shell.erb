# zsh, bash 共通の設定ファイル
umask 022
export EDITOR='emacs'
export VISUAL='emacs'

#
# simple alias
#

alias c='cd'
alias emacs='emacsclient -nw -a ""'
alias ekill='emacsclient -e "(kill-emacs)"'
alias em='emacs'
alias e='emacs'
alias ct='column -t'

#
# mac : use coreutils
#
if [ "$(uname)" = 'Darwin' ]; then
    if type gmv > /dev/null; then
        alias mv='gmv'
        alias ln='gln'
    fi
fi

# ls
LS='ls'
if [ "$(uname)" = 'Darwin' ]; then
    if type /usr/local/bin/gls > /dev/null; then
        LS='/usr/local/bin/gls --color=auto'
    else
        LS='/bin/ls -G'
    fi
elif [ "$(expr substr $(uname -s) 1 5)" = 'Linux' ]; then
    if type /usr/bin/ls > /dev/null; then
        LS='/usr/bin/ls --color=auto'
    else
        LS='/bin/ls --color=auto'
    fi
fi
alias ls="$LS -F"
alias sl="$LS -F"
alias ll="$LS -lhF"
alias la="$LS -AF"
alias lla="$LS -AlhF"
alias l="$LS"

#
# rm
#

mkdir -p "${HOME}/Trash"
alias rm='echo "You should not use rm command!"; false'
alias trash='mv --backup=numbered --target-directory=${HOME}/Trash --suffix=. -f'
alias rmtrash='trash'
echo 'rm is disabled. use trash instead.'

# open
if [ "$(expr substr $(uname -s) 1 5)" = 'Linux' ]; then
    alias open=xdg-open
fi